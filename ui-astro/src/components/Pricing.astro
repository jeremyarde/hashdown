---
const tiers = [
  {
    name: "Basic",
    price: "$9.99",
    features: ["1 User", "10GB Storage", "Basic Support"],
  },
  {
    name: "Pro",
    price: "$19.99",
    features: ["5 Users", "50GB Storage", "Priority Support"],
  },
  {
    name: "Enterprise",
    price: "$49.99",
    features: ["Unlimited Users", "1TB Storage", "24/7 Support"],
  },
];

const styles = {
  pricingPage: {
    fontFamily: "Arial, sans-serif",
    maxWidth: "1200px",
    margin: "0 auto",
    padding: "20px",
  },
  title: {
    textAlign: "center",
    color: "#333",
    marginBottom: "40px",
  },
  tiersContainer: {
    display: "flex",
    justifyContent: "center",
    gap: "20px",
    flexWrap: "wrap",
  },
  tier: {
    backgroundColor: "#fff",
    border: "1px solid #ddd",
    borderRadius: "8px",
    padding: "20px",
    width: "300px",
    textAlign: "center",
    boxShadow: "0 4px 6px rgba(0, 0, 0, 0.1)",
    transition: "transform 0.3s ease",
    ":hover": {
      transform: "translateY(-5px)",
    },
  },
  tierName: {
    color: "#333",
    fontSize: "24px",
    marginBottom: "10px",
  },
  price: {
    fontSize: "36px",
    color: "#0066cc",
    marginBottom: "20px",
  },
  perMonth: {
    fontSize: "16px",
    color: "#666",
  },
  features: {
    listStyleType: "none",
    padding: 0,
    marginBottom: "20px",
  },
  feature: {
    marginBottom: "10px",
    color: "#555",
  },
  button: {
    backgroundColor: "#0066cc",
    color: "white",
    border: "none",
    padding: "10px 20px",
    fontSize: "16px",
    borderRadius: "5px",
    cursor: "pointer",
    transition: "background-color 0.3s ease",
    ":hover": {
      backgroundColor: "#0052a3",
    },
  },
} as const;

// Add media query for responsiveness
if (typeof window !== "undefined") {
  window.addEventListener("resize", () => {
    if (window.innerWidth <= 768) {
      Object.assign(styles.tiersContainer, {
        flexDirection: "column",
        alignItems: "center",
      });
      Object.assign(styles.tier, {
        width: "100%",
        maxWidth: "300px",
        marginBottom: "20px",
      });
    } else {
      Object.assign(styles.tiersContainer, {
        flexDirection: "row",
        alignItems: "stretch",
      });
      Object.assign(styles.tier, {
        width: "300px",
        marginBottom: "0",
      });
    }
  });
}
---

<div id="pricing" class="pricing-page">
  <h1 class="title">Our Pricing Plans</h1>
  <div class="tiers-container">
    {
      tiers.map((tier, index) => (
        <div class="tier">
          <h2 class="tier-name">{tier.name}</h2>
          <p class="price">
            {tier.price}
            <span class="per-month">/month</span>
          </p>
          <ul class="features">
            {tier.features.map((feature, featureIndex) => (
              <li class="feature">{feature}</li>
            ))}
          </ul>
          <button class="button">Choose Plan</button>
        </div>
      ))
    }
  </div>
</div>
