---
const tiers = [
  {
    name: "Basic",
    price: "$9.99",
    features: ["1 User", "10GB Storage", "Basic Support"],
  },
  {
    name: "Pro",
    price: "$19.99",
    features: ["5 Users", "50GB Storage", "Priority Support"],
  },
  {
    name: "Enterprise",
    price: "$49.99",
    features: ["Unlimited Users", "1TB Storage", "24/7 Support"],
  },
];
---

<style>
  .features {
    color: "#555";
    margin-bottom: 10px;
    list-style-type: none;
    display: flex;
    flex-direction: column;
    padding: 0;
  }
  .feature {
    margin-bottom: 10px;
    color: "#555";
  }
  .tiers-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }
  .tier {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 20px;
    width: 300px;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    ":hover": {
      transform: translateY(-5px);
    }
  }

  .tier-name {
    color: "#333";
    font-size: 24px;
    margin-bottom: 10px;
  }
  .plan-button {
    backgroundcolor: #0066cc;
    color: white;
    border: none;
    padding: 10px 20px;
    fontsize: 16px;
    borderradius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    ":hover": {
      backgroundcolor: #0052a3;
    }
  }
  .price {
    font-size: 36px;
    color: #0066cc;
    margin-bottom: 20px;
  }
  .per-month {
    font-size: 16px;
    color: #666;
  }
  .title {
    text-align: center;
    color: #333;
    margin-bottom: 40px;
  }
  .pricing-page {
    fontfamily: "Arial, sans-serif";
    maxwidth: "1200px";
    margin: "0 auto";
    padding: "20px";
  }
</style>

<div id="pricing" class="pricing-page section">
  <h1 class="title">Our Pricing Plans</h1>
  <div class="tiers-container">
    {
      tiers.map((tier, index) => (
        <div class="tier">
          <h2 class="tier-name">{tier.name}</h2>
          <p class="price">
            {tier.price}
            <span class="per-month">/month</span>
          </p>
          <ul class="features">
            {tier.features.map((feature, featureIndex) => (
              <li class="feature">{feature}</li>
            ))}
          </ul>
          <button class="plan-button">Choose Plan</button>
        </div>
      ))
    }
  </div>
</div>
