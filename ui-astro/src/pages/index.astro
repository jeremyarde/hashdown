---
import Pricing from "@components/Pricing.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import MySiteLayout from "../layouts/BaseLayout.astro";

// let sampleSurvey = markdown_to_form_wasm_v2(heroContent);
---

<style>
  @import "tailwindcss/base";
  @import "tailwindcss/components";
  @import "tailwindcss/utilities";

  /*  from here: https://twitter.com/souporserious/status/1746378842787459501/photo/1 */
  * {
    /* include padding and border in size calculation */
    box-sizing: border-box;
    /* position based on immediate parent and allow adjusting trbl */
    /* position: relative; */
    /* prevent grid and flex items from spilling out of container */
    min-width: 0;
    border: 1px solid pink;
  }

  body {
    /* body fills entire view port */
    min-height: 100dvh;
  }

  h1,
  h2,
  h3,
  h4 {
    /* balance headings across multiple lines into even block */
    text-wrap: balance;
  }

  p {
    /* prevent single words of text on new line */
    text-wrap: balance;
  }

  .faq-section {
    max-width: 720px;
    input {
      display: none;
    }
    label {
      display: block;
      cursor: pointer;
      background-color: #f1f1f1;
      padding: 10px;
      border: 1px solid #ccc;
      margin-bottom: 5px;
    }
    .faq-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
      padding: 0 10px;
      background-color: #fafafa;
      border-left: 1px solid #ccc;
      border-right: 1px solid #ccc;
      border-bottom: 1px solid #ccc;
    }

    input:checked + label + .faq-content {
      max-height: 100px; /* Adjust this value based on the content height */
      padding: 10px;
    }
  }

  * {
    max-width: 1280px;
    margin: 0 auto;
    text-align: center;
  }

  /* General Styles */
  body {
    font-family: "Lato", sans-serif; /* Clean, modern font */
    line-height: 1.6;
    margin: 0;
    padding: 0;
    background-color: #f4f7f6; /* Soft background */
    color: #333; /* Dark text color */
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: #2c3e50; /* Darker shade for headings */
    margin-bottom: 15px;
    line-height: 1.2;
  }

  p {
    margin-bottom: 20px;
  }

  a {
    color: #3498db; /* Primary link color */
    text-decoration: none;
    transition: color 0.3s;
  }

  a:hover {
    color: #2980b9; /* Slightly darker on hover */
  }

  button {
    background-color: #3498db; /* Primary button color */
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  button:hover {
    background-color: #2980b9;
  }

  /* Layout */
  .container {
    max-width: 1200px; /* Limit the width for readability */
    margin: 0 auto;
    padding: 20px;
  }

  .header {
    background-color: #2c3e50;
    color: white;
    padding: 20px 0;
    text-align: center;
  }

  .header h1 {
    margin: 0;
    font-size: 2.5em;
  }

  .navbar {
    display: flex;
    justify-content: center;
    background-color: #3498db;
    padding: 10px 0;
  }

  .navbar a {
    margin: 0 15px;
    font-size: 1.2em;
    color: white;
    text-transform: uppercase;
  }

  .navbar a:hover {
    color: #ecf0f1; /* Lighter on hover */
  }

  .main-content {
    background-color: white;
    padding: 40px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
    border-radius: 5px;
    margin-bottom: 40px;
  }

  footer {
    background-color: #2c3e50;
    color: white;
    text-align: center;
    padding: 20px;
    position: relative;
    bottom: 0;
    width: 100%;
  }

  footer p {
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    h1 {
      font-size: 2em;
    }

    .navbar {
      flex-direction: column;
    }

    .navbar a {
      margin: 10px 0;
    }

    .main-content {
      padding: 20px;
    }
  }

